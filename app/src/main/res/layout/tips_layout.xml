<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/cutom_dialog_bg"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_50"
        android:minHeight="@dimen/dimen_250"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:gravity="center_vertical"
            android:visibility="visible"
            android:padding="@dimen/activity_horizontal_margin"
            android:background="@drawable/cutom_dialog_title_bg"
            android:orientation="horizontal">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/title_header_text"
                android:textSize="@dimen/sp_size_16"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="GB035473457"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel_image"
                android:src="@drawable/ic_cancel"
                android:layout_gravity="end|center_vertical"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="@dimen/dimen_170"
            android:layout_height="@dimen/dimen_50"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20"
            android:padding="@dimen/dimen_4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_size_24"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="$"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_round_corner"
                android:id="@+id/tips_edit"
                android:textSize="@dimen/sp_size_14"
                android:maxLength="2"
                android:layout_marginLeft="@dimen/dimen_10"
                android:textColor="@color/black"
                android:inputType="numberDecimal"
                android:padding="@dimen/dimen_5"/>

    </LinearLayout>
    <TextView
            android:layout_width="@dimen/dimen_150"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            android:background="@drawable/blue_round_corner"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/sp_size_18"
            android:id="@+id/add_tips_button"
            android:text="@string/add_tips"
            android:textColor="@color/white"/>

</LinearLayout>