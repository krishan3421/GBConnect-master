<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/cutom_dialog_bg"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_50"
        android:minHeight="@dimen/dimen_250"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:gravity="center_vertical"
            android:visibility="visible"
            android:padding="@dimen/activity_horizontal_margin"
            android:background="@drawable/cutom_dialog_title_bg"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/title_header_text"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Payment Query"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_16"
                android:textStyle="bold" />

        <ImageView
                android:id="@+id/cancel_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_cancel" />
    </LinearLayout>

    <EditText android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120"
            android:textColor="@color/black"
            android:singleLine="false"
            android:textSize="@dimen/sp_size_14"
            android:hint="@string/type_your_query"
            android:padding="@dimen/dimen_10"
            android:gravity="top"
            android:id="@+id/detail_edit_payment"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/white_round_corner"
            />
    <Button
            android:layout_width="@dimen/dimen_180"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/sp_size_18"
            android:background="@drawable/saffron_round_corner"
            android:layout_marginBottom="@dimen/dimen_30"
            android:id="@+id/submit_button_payment"/>

</LinearLayout>