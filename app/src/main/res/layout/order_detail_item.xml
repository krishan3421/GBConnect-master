<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_10">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/dimen_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:background="@drawable/black_round"
                android:gravity="center"
                android:text="$"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_30"
                android:textStyle="bold" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/delivery_type_text"
                    style="@style/normal_text_14"
                    android:text="DELIVERY NOT PAID"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/dont_charge_text"
                    style="@style/normal_text_12"
                    android:text="Do not charge the customer" />
        </LinearLayout>

        <TextView
                android:id="@+id/prepaid_text"
                style="@style/normal_text_14"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_30"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@color/green"
                android:gravity="center"
                android:text="@string/prepaid"
                android:textColor="@color/white"
                android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/dimen_5"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/name_text"
                    style="@style/normal_text_12"
                    android:textStyle="bold" />

            <LinearLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:orientation="vertical">

                <TextView
                        style="@style/normal_text_14"
                        android:text="@string/delivery_address"
                        android:textColor="@color/blue_color"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/delivery_address"
                        style="@style/normal_text_12" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_weight="1.8"
                android:paddingLeft="@dimen/dimen_3"
                android:orientation="vertical">


            <Button
                    android:id="@+id/con_update_button"
                    style="@style/blue_button"
                    android:layout_height="@dimen/dimen_35"
                    android:background="@drawable/gray_bg_one"
                    android:onClick="confirmMethod"
                    android:text="@string/confirm"
                    android:textColor="@color/blue_color"
                    android:textStyle="bold"
                    android:visibility="visible" />


            <TextView
                    android:id="@+id/txtPrint"
                    style="@style/normal_text_14"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_effect"
                    android:gravity="center"
                    android:text="@string/print"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>



    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_3"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/green" />

    <TextView
            android:id="@+id/phone_text"
            style="@style/normal_text_12"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginBottom="@dimen/dimen_5"
            android:text="Ph: 21414415415"
            android:textStyle="bold" />

</LinearLayout>