<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/cutom_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_10"
            android:background="@drawable/cutom_dialog_title_bg"
            android:orientation="horizontal">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/title_dialog_text"
                android:textSize="@dimen/sp_size_16"
                android:gravity="center"
                android:textColor="@color/white"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/close_dialog"
                android:src="@drawable/ic_cancel"
                android:layout_gravity="end|center_vertical"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_30">
        <TextView android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dimen_3"
                android:textSize="@dimen/sp_size_14"
                android:gravity="left"
                android:textColor="@color/black"/>
        <TextView android:id="@+id/people_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_size_14"
                android:gravity="left"
                android:textColor="@color/black"/>
        <TextView android:id="@+id/booking_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dimen_3"
                android:textSize="@dimen/sp_size_14"
                android:gravity="left"
                android:textColor="@color/blue_color"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/location_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_size_14"
                    android:gravity="left"
                    android:textColor="@color/blue_color"
                    android:text="@string/location"/>
            <TextView android:id="@+id/location_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimen_3"
                    android:textSize="@dimen/sp_size_12"
                    android:gravity="left"
                    android:textColor="@color/black"/>
        </LinearLayout>
        <TextView android:id="@+id/des_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_size_12"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:textColor="@color/black"
               />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <TextView android:id="@+id/reply_text_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_size_14"
                    android:gravity="left"
                    android:textColor="@color/blue_color"
                    android:text="@string/reply_res"/>
            <TextView android:id="@+id/reply_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimen_3"
                    android:textSize="@dimen/sp_size_12"
                    android:gravity="left"
                    android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_30">
        <EditText android:id="@+id/reply_edittext"
                style="@style/common_edit"
                android:layout_height="@dimen/dimen_100"
                android:padding="@dimen/dimen_3"
                android:background="@drawable/white_round_corner"
                android:layout_marginTop="@dimen/dimen_5"
                android:hint="@string/reply"
                android:textColorHint="@color/dark_gray"
                android:inputType="textCapSentences"
                android:gravity="left"/>
    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_30"
        android:orientation="horizontal">
    <Button   android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:textSize="@dimen/sp_size_14"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:layout_marginRight="@dimen/dimen_3"
            android:textColor="@color/white"
            android:text="@string/confirm"
            android:background="@drawable/blue_round_corner"/>
    <Button   android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:textSize="@dimen/sp_size_14"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_3"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="@string/cancel"
            android:background="@drawable/colorprimary_round_corner"/>
</LinearLayout>


</LinearLayout>