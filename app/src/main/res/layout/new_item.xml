<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/light_gray"
        android:layout_margin="@dimen/dimen_5"
        app:cardCornerRadius="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10"
                android:orientation="horizontal">

            <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DELIVERY PAID"
                    android:id="@+id/type_text"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp_size_14"
                    android:textStyle="bold"
                    />
            <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="November 15,2019,12:03 pm"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:id="@+id/date_text"
                    android:textColor="@color/blue_color"
                    android:textSize="@dimen/sp_size_12"
                    android:textStyle="normal"
                    />
        </LinearLayout>
        <LinearLayout android:id="@+id/future_order_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_10"
                android:paddingBottom="@dimen/dimen_10"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="horizontal">

            <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/future_order_date_text"
                    android:textColor="@color/suffern_color"
                    android:textSize="@dimen/sp_size_14"
                    android:textStyle="bold"
                    />

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dimen_10"
                android:background="@drawable/card_bg_new">
            <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/dimen_50"
                        android:orientation="vertical">

                    <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/name_text"
                            android:textSize="@dimen/sp_size_12"
                            android:textStyle="bold"
                            />
                    <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/address_text"
                            android:layout_marginRight="@dimen/dimen_60"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_size_12"
                            android:textStyle="normal"
                            />
                </LinearLayout>
                <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/total_text"
                        android:textColor="@color/white"
                        android:gravity="right"
                        android:text="$0.00"
                        android:textSize="@dimen/sp_size_18"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:textStyle="bold"
                        />
            </LinearLayout>
            <Button
                    style="@style/blue_button"
                    android:id="@+id/view_layout"
                    android:layout_width="match_parent"
                    android:text="@string/view_details"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:layout_marginRight="@dimen/dimen_30"/>

<!--            <Button-->
<!--                    style="@style/blue_button"-->
<!--                    android:id="@+id/btnPrint"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:text="Print"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:layout_marginLeft="@dimen/dimen_30"-->
<!--                    android:layout_marginRight="@dimen/dimen_30"/>-->



        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>