<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:id="@+id/date_text"
            android:gravity="center"
            android:padding="@dimen/dimen_2"
            android:background="@color/black"
            android:textSize="@dimen/sp_size_10"
            android:text="Apr 25,2020\n07:00 pm"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:textColor="@color/white"
            android:layout_weight="1.1"
            android:id="@+id/people_text"
            android:layout_marginLeft="@dimen/dimen_4"
            android:padding="@dimen/dimen_1"
            android:background="@color/blue_color"
            android:gravity="center"
            android:textSize="@dimen/sp_size_10"
            android:text="6 People"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/name_text"
                android:gravity="right"
                android:textSize="@dimen/sp_size_12"
                android:text="Admin Testing"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_color"
                android:id="@+id/phone_text"
                android:gravity="right"
                android:layout_marginTop="@dimen/dimen_2"
                android:textSize="@dimen/sp_size_12"
                android:text="9512345668"/>
    </LinearLayout>
    <ImageView android:id="@+id/status_image"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_5"
            android:scaleType="centerInside"
            android:src="@drawable/tick_icon"/>
    <ImageView
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:scaleType="centerInside"
            android:src="@drawable/double_arrow_next"/>

</LinearLayout>