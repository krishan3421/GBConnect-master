<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/bg_color"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_reset_pass"
        tools:context=".ui.ResetPassActivity">

    <EditText style="@style/common_edit"
              android:layout_width="match_parent"
              android:hint="@string/new_password"
              android:id="@+id/new_pass_text"
              android:textStyle="normal"
              android:layout_marginLeft="@dimen/dimen_30"
              android:layout_marginRight="@dimen/dimen_30"
              android:layout_marginTop="@dimen/dimen_20"
              android:inputType="textPassword"
    />
    <EditText style="@style/common_edit"
              android:layout_width="match_parent"
              android:hint="@string/con_pass"
              android:layout_marginLeft="@dimen/dimen_30"
              android:layout_marginRight="@dimen/dimen_30"
              android:id="@+id/con_pass_text"
              android:textStyle="normal"
              android:layout_marginTop="@dimen/dimen_20"
              android:inputType="textPassword"
    />



        <Button android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_centerInParent="true"
                android:onClick="submitMethod"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_30"
                android:background="@drawable/submit_button_bg"/>


</LinearLayout>