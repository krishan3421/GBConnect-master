<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/dimen_40"
        tools:context=".ui.fragments.HomeFragment">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_20"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:padding="@dimen/dimen_4"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dimen_4"
                card_view:cardElevation="10dp"
                android:elevation="8dp"
                android:visibility="gone"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardPreventCornerOverlap="false"
                android:id="@+id/update_layout">

            <TextView
                    style="@style/normal_text_14"
                    android:text="@string/new_update"
                    android:textColor="@color/black"
                    android:singleLine="false"
                    android:id="@+id/update_text"
                    android:layout_marginRight="@dimen/dimen_70"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_gravity="center_vertical|left"/>
            <ImageView android:id="@+id/close_update_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_gravity="right|center_vertical"
                    android:tint="@color/black"
                    android:src="@drawable/ic_close"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_120"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dimen_4"
                card_view:cardElevation="10dp"
                android:elevation="8dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardPreventCornerOverlap="false"
                android:id="@+id/orders_layout">

            <TextView
                    style="@style/home_text"
                    android:text="@string/orders"
                    android:textSize="@dimen/sp_size_26"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_gravity="center_vertical|left"/>
            <ImageView
                    android:layout_width="@dimen/dimen_70"
                    android:layout_height="@dimen/dimen_70"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/orders_image"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dimen_2"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/support_layout"
                    card_view:cardElevation="8dp"
                    android:elevation="8dp"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardPreventCornerOverlap="false"
                    android:layout_marginRight="@dimen/dimen_4"
                    android:layout_height="@dimen/dimen_120">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                    <TextView
                            style="@style/home_text"
                            android:text="@string/support"
                            android:textSize="@dimen/sp_size_22"
                            android:layout_gravity="center_vertical|left"/>
                    <ImageView
                            android:layout_width="@dimen/dimen_50"
                            android:layout_height="@dimen/dimen_50"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:src="@drawable/support_image"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/setting_layout"
                    card_view:cardElevation="8dp"
                    android:elevation="8dp"
                    card_view:cardBackgroundColor="@color/white"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:layout_height="@dimen/dimen_120">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@color/white"
                        android:orientation="vertical">
                    <TextView
                            style="@style/home_text"
                            android:text="@string/action_settings"
                            android:textAllCaps="true"
                            android:textSize="@dimen/sp_size_22"
                            android:layout_gravity="center_vertical|left"/>
                    <ImageView
                            android:layout_width="@dimen/dimen_60"
                            android:layout_height="@dimen/dimen_60"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:src="@drawable/setting_image"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:id="@+id/report_layout"
                card_view:cardElevation="10dp"
                android:elevation="8dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardPreventCornerOverlap="false"
                android:layout_height="@dimen/dimen_120"
                android:layout_weight="1">
            <TextView
                    style="@style/home_text"
                    android:text="@string/reports"
                    android:textSize="@dimen/sp_size_26"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_gravity="center_vertical|left"/>
            <ImageView
                    android:layout_width="@dimen/dimen_200"
                    android:layout_height="@dimen/dimen_100"
                    android:layout_gravity="right|bottom"
                    android:src="@drawable/reports_image"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:id="@+id/market_coupon_layout"
                card_view:cardElevation="10dp"
                android:elevation="8dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardPreventCornerOverlap="false"
                android:layout_height="@dimen/dimen_120"
                android:layout_weight="1">
            <TextView
                    style="@style/home_text"
                    android:text="@string/marketing_coupon"
                    android:textStyle="normal"
                    android:textSize="@dimen/sp_size_20"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_gravity="center_vertical|left"/>
            <ImageView
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_80"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/percent_icon"/>
        </androidx.cardview.widget.CardView>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo"/>
    </LinearLayout>

    <ProgressBar android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/progress_bar"
            android:visibility="gone"/>
</RelativeLayout>
</androidx.core.widget.NestedScrollView>