<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:orientation="vertical"
                                   app:cardBackgroundColor="@color/white"
                                   android:layout_margin="@dimen/dimen_5"
                                   app:cardCornerRadius="@dimen/dimen_10"
                                   android:layout_width="match_parent"
                                   android:layout_height="@dimen/dimen_170">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_bg"
                    android:padding="@dimen/dimen_5">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:id="@+id/restaurant_id"
                  android:textSize="@dimen/sp_size_14"
                  android:textStyle="bold"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="PICKUP PAID"
                    android:id="@+id/type_text"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentTop="true"
                  android:textColor="@color/black"
                  android:textSize="@dimen/sp_size_14"
                  android:textStyle="bold"
        />
        <Button android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30"
                android:textSize="@dimen/sp_size_10"
                android:id="@+id/confirm_button"
                android:layout_centerInParent="true"
                android:textColor="@color/blue_color"
                android:background="@drawable/white_blue_round_corner"
                android:text="@string/confirm"
        />
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/blue_color"
                      android:textSize="@dimen/sp_size_12"
                      android:id="@+id/name_text"
                      android:textStyle="bold"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/dark_gray"
                      android:textSize="@dimen/sp_size_12"
                      android:id="@+id/mobile_text"
                      android:textStyle="normal"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/total_text"
                      android:textColor="@color/black"
                      android:textSize="@dimen/sp_size_22"
                      android:textStyle="bold"
            />
        </LinearLayout>
        <LinearLayout android:layout_width="@dimen/dimen_60"
                      android:layout_height="@dimen/dimen_60"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:background="@color/dark_gray"
                      android:gravity="center"
                        android:id="@+id/view_layout"
                      android:orientation="vertical">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/hand_point_icon"
                       android:layout_gravity="center"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="VIEW"
                      android:layout_marginTop="@dimen/dimen_2"
                      android:layout_gravity="center_horizontal|bottom"
                      android:textColor="@color/white"
                      android:textSize="@dimen/sp_size_10"
                      android:textStyle="bold"
            />

        </LinearLayout>
        <TextView android:layout_width="match_parent"
                  android:layout_height="@dimen/dimen_25"
                  android:background="@color/blue_color"
                  android:id="@+id/date_text"
                  android:layout_centerHorizontal="true"
                  android:layout_alignParentBottom="true"
                  android:layout_margin="@dimen/dimen_5"
                  android:gravity="center"
                  android:textColor="@color/white"
                  android:textSize="@dimen/sp_size_10"
                  android:textStyle="normal"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>