<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="4dp"
        android:layout_margin="@dimen/dimen_10"
        android:padding="@dimen/dimen_10">
<RelativeLayout
              android:padding="@dimen/dimen_10"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
  <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">
      <TextView android:id="@+id/user_id_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="krish@gmail.com"
              android:textColor="@color/black"
              android:textSize="@dimen/sp_size_14"/>
      <TextView android:id="@+id/name_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dimen_3"
              android:text="krish"
              android:textColor="@color/black"
              android:textSize="@dimen/sp_size_14"/>
  </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

        <TextView android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/active_icon"
                android:gravity="center"
                android:text="Active"
                android:textColor="@color/green"
                android:textSize="@dimen/sp_size_12"
                android:textStyle="bold" />

        <Button  android:id="@+id/edit_button"
                style="@style/marketing_button"
                android:text="@string/edit"
                android:layout_marginLeft="@dimen/dimen_30"/>

        <Button android:id="@+id/delete_button"
                style="@style/marketing_button"
                android:text="@string/delete"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_30"/>
    </LinearLayout>

</RelativeLayout>
</androidx.cardview.widget.CardView>